%h1 Twitter Bicker
#tabs
  %ul.tab
    %li
      %a{href: "javascript:changeTab('Ratio')", class: "tablinks"} Ratio
    %li
      %a{href: "javascript:changeTab('Radar')", class: "tablinks"} Radar
    %li
      %a{href: "javascript:changeTab('WordMap')", class: "tablinks"} Word Map



#ratio-charts{style: "display:block", align: "center"}
  %blockquote{class:'twitter-tweet', data_lang:'en'}
    %h3 Angriest Tweet So Far
    %p#angrytweet{lang: "en", dir: "ltr"}
      &quot;
      %span#tweet
      &quot;
      &mdash;
      %span#user
  %table
    %tbody
      %tr
        %td
          #trump-ratio-chart
            = image_tag("trump_dropping_knowledge.png", id: 'trump-img', :alt => "rss feed", width: '150', height: '150')
            %canvas{id: 'ratio-chart-trump', width: '200', height: '300'}
        %td
          #vs-text
            %h2#vs-header V.S.
        %td
          #hillary-ratio-chart
            = image_tag("hillary_happy.png", id: 'hillary-img', :alt => "rss feed", width: '150', height: '150')
            %canvas{id: 'ratio-chart-hillary', width: '200', height: '300'}
    

#radar-chart{align: "center", style: "display:none"}
  %canvas{id: 'radar-chart-trump-hillary'}
  
#word-map{width: '400', height: '400', style: "display:none"}


:javascript
  var asset_path_trump = ["#{asset_path('trump_dropping_knowledge.png')}",
                          "#{asset_path('trump_dropping_knowledge_one.png')}",
                          "#{asset_path('trump_dropping_knowledge_two.png')}",
                          "#{asset_path('trump_dropping_knowledge_three.png')}"];
  var asset_path_hillary = ["#{asset_path('hillary_happy.png')}",
                          "#{asset_path('hillary_unhappy_one.png')}",
                          "#{asset_path('hillary_unhappy_two.png')}",
                          "#{asset_path('hillary_unhappy_three.png')}"];